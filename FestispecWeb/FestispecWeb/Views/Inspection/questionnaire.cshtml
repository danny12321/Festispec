@model IEnumerable<FestispecWeb.Models.AnswersVM>

    @{
    ViewBag.Title = "questionnaire";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2> </h2>

    <div class="container2">
        <div class="row">
            <div class="box">
                <div class="col-md-6">
                    <h2 class="Text">Vragenlijst</h2>
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm("SaveAnswers", "Inspection", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div>
        @foreach (var item in Model)
    {
        <div class="form__question">
            <h2>@Html.DisplayFor(modelItem => item.Question.question)</h2>

            @if (item.Question.type_question == 1)
            {
            <input name="@item.Answers.answer" />
            }
            else if (item.Question.type_question == 2)
            {
                foreach (var pasnwer in item.Question.Possible_answer)
                {
            <input type="checkbox" name="@item.Answers.answer" />  @pasnwer.answer  <br />
                }
            }
            else if (item.Question.type_question == 3)
            {
                foreach (var pasnwer in item.Question.Possible_answer)
                {
            <input type="radio" name="@item.Answers.answer" />  @pasnwer.answer  <br />
                }
            }
            else
            {
            <div>question type not found</div>
            }
        </div>
    }

    </div>

    <input type="checkbox" /><span>Klaar</span>
    <br />
    <input type="submit" value="Opslaan" class="btn btn-default" />
}



    <style>
        .container2 {
            background-color: #4B4B4B;
        }

        .Text {
            color: white;
            margin-left: 10px;
        }

        .form {
        }

        .form__question {
            margin: 30px 0;
        }
    </style>
