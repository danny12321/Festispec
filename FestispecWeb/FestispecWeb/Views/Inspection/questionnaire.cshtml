@model IEnumerable<Festipec.Domain.Questions>

@{
    ViewBag.Title = "questionnaire";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> </h2>

<div class="container2">
    <div class="row">
        <div class="box">
            <div class="col-md-6">
                <h2 class="Text">Vragenlijst</h2>
            </div>
        </div>
    </div>
</div>

<!--Form of form gebruiken-->
<form class="form">
    @foreach (var item in Model)
    {
        <div class="form__question">
            <h2>@Html.DisplayFor(modelItem => item.question)</h2>

            <h4>Antwoord:</h4>

            @if (item.type_question == 1)
            {
                <input name="@item.id" />
            }
            else if (item.type_question == 2)
            {
                foreach (var pasnwer in item.Possible_answer)
                {
                    <input type="checkbox" name="@item.id" /> @pasnwer.answer <br />
                }
            }
            else if (item.type_question == 3)
            {
                foreach (var pasnwer in item.Possible_answer)
                {
                    <input type="radio" name="@item.id" /> @pasnwer.answer <br />
                }
            }
            else
            {
                <div>question type not found</div>
            }
        </div>
    }

    <input type="checkbox" /> Is klaar <br />

    <button type="submit">Opslaan</button>
</form>


<style>
    .container2 {
        background-color: #4B4B4B;
    }

    .Text {
        color: white;
        margin-left: 10px;
    }

    .form {
    }

    .form__question {
        margin: 30px 0;
    }

    .borderless {
        border-bottom: hidden;
    }

    .tr {
        border-bottom: 1px;
    }
</style>
