@model List<FestispecWeb.Models.AnswersVM>

@{
    ViewBag.Title = "questionnaire";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> </h2>

<div class="container2">
    <div class="row">
        <div class="box">
            <div class="col-md-6">
                <h2 class="Text">Vragenlijst</h2>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("SaveAnswers", "Inspection", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div>
        @for(int i = 0; i < Model.Count; i++)
        {
        <div class="form__question">
            <h2>@Html.DisplayFor(modelItem => Model[i].Question.question)</h2>
            <input type="hidden" name="[@i].Answers.question_id" value="@Model[i].Question.id" />


            @if (Model[i].Question.type_question == 1)
            {
                <input type="text" name="[@i].Answers.answer" />
            }
            else if (Model[i].Question.type_question == 2)
            {
                foreach (var pasnwer in Model[i].Question.Possible_answer)
                {
                    <input type="checkbox" name="@Model[i].Answers.answer" /> @pasnwer.answer <br />
                }
            }
            else if (Model[i].Question.type_question == 3)
            {
                foreach (var pasnwer in Model[i].Question.Possible_answer)
                {
                    <input type="radio" name="[@i].Answers.answer" /> @pasnwer.answer <br />
                }
            }
            else if (Model[i].Question.type_question == 4)
            {
                <input type="file" name="@Model[i].Answers.answer" accept="image/x-png,image/gif,image/jpeg" /> <br />
            }
            else
            {
                <div>question type not found</div>
            }
        </div>
        }

    </div>

    <input type="checkbox" /><span>Klaar</span>
    <br />
    <input type="submit" value="Opslaan" class="btn btn-default" />
}



<style>
    .container2 {
        background-color: #4B4B4B;
    }

    .Text {
        color: white;
        margin-left: 10px;
    }

    .form {
    }

    .form__question {
        margin: 30px 0;
    }
</style>
