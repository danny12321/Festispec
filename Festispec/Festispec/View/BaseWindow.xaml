<Window x:Class="Festispec.View.BaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Festispec.View"
        mc:Ignorable="d"
        DataContext="{Binding }"
        WindowState="Maximized"
        Title="Home">
    
    <StackPanel Orientation="Horizontal">
        <Border BorderThickness="20">
            <StackPanel>

                <Button Command="{Binding NavigateHomeCommand}" VerticalAlignment="Top">Home</Button>
                <Button Command="{Binding NavigateTestPageCommand}" VerticalAlignment="Top">Home</Button>
            </StackPanel>
        </Border>

        <Frame Content="{Binding FrameContent}" NavigationUIVisibility="Hidden"></Frame>

    </StackPanel>
</Window>
