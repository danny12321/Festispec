<Page x:Class="Festispec.View.Questionnaires.Types.MultipleChoiseEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Festispec.View.Questionnaires.Types"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MultipleChoiseEdit">

    <StackPanel>
        <TextBlock FontSize="25">Mogelijke antwoorden</TextBlock>
        <ListView 
            ItemsSource="{Binding Possible_answers}"
            VerticalContentAlignment="Top"  
            ScrollViewer.VerticalScrollBarVisibility="Visible"
            ScrollViewer.CanContentScroll="False"
            Height="500"
        >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBox 
                        Text="{Binding Answer}" 
                        Width="300" 
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Command="{Binding AddAnswerRowCommand}">Voeg regel toe</Button>
    </StackPanel>
</Page>
