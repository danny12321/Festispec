<Page x:Class="Festispec.View.Questionnaires.Questionnaires"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Festispec.View.Questionnaires"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Questionnaires"
      Background="White"
      DataContext="{Binding Questionnaires, Source={StaticResource Locator}}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Padding="20">
            <StackPanel>

                <TextBlock FontSize="30">Vragen</TextBlock>
                <Border Padding="0,10">
                    <StackPanel>
                        <TextBlock>
                            <materialDesign:PackIcon Kind="ModeEdit" />
                            Dit is een vraag
                        </TextBlock>
                        <TextBlock>Open vraag</TextBlock>
                    </StackPanel>
                </Border>


                <Button HorizontalAlignment="Right" Command="{Binding AddQuestionCommand}">
                    <Border CornerRadius="8" BorderThickness="1" BorderBrush="Black">
                        <materialDesign:PackIcon Kind="Add"/>
                    </Border>
                </Button>
            </StackPanel>
        </Border>

        <!-- Selected Question -->
        <Border Grid.Column="1" Padding="20">
            <StackPanel Grid.Column="1">
                <TextBox FontSize="25">Hoe schoon is het Terein</TextBox>

                <TextBlock>Type vraag</TextBlock>

                <ComboBox ItemsSource="{Binding Path=QuestionTypes}"
                  DisplayMemberPath="Type"
                  SelectedValuePath="Type"
                  SelectedValue="{Binding Path=SelectedQuestion.Type}" />

                <Frame Content="{Binding QuestionContent}" NavigationUIVisibility="Hidden"></Frame>

            </StackPanel>
        </Border>
    </Grid>
</Page>
