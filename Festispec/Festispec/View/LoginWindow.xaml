<Window x:Class="Festispec.View.LoginWindow"
        x:Name="LoginWindowName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Festispec"
        mc:Ignorable="d"
        DataContext="{Binding Login, Source={StaticResource Locator}}"
        WindowState="Maximized"
        Title="Festispec"
        Background="#32385D">
    <Grid VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center">

            <Label Content="Festispec" HorizontalAlignment="Center" FontSize="40" Foreground="White"/>

            <Label Content="Email:" Foreground="White"/>
            <TextBox Height="20" HorizontalAlignment="Stretch" Text="{Binding Email, Mode=TwoWay}"/>

            <Label Content="Wachtwoord:" Foreground="White"/>
            <TextBox Height="20" HorizontalAlignment="Stretch" Text="{Binding Password, Mode=TwoWay}"/>

            <Button Height="20" HorizontalAlignment="Stretch" Margin="0, 10, 0, 0" Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=LoginWindowName}">Log in</Button>

        </StackPanel>
    </Grid>
</Window>
