<Page x:Class="Festispec.View.FestivalViews.AddFestival"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Festispec.View.FestivalViews"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddFestival"
      Background="White"
      DataContext="{Binding addFestival, Source={StaticResource Locator}}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Border Padding="20">
            <StackPanel>

                <TextBlock Text="Voeg een nieuw Festival toe" FontSize="25" Padding="0,10"/>

                <TextBlock Text="Festival naam:"></TextBlock>
                <TextBox MaxLength="50" Text="{Binding Festival.FestivalName, Mode=TwoWay}"></TextBox>
                <TextBlock Text="Postcode:"></TextBlock>
                <TextBox MaxLength="6" Text="{Binding Festival.PostalCode, Mode=TwoWay}"></TextBox>
                <TextBlock Text="Straat:"></TextBlock>
                <TextBox MaxLength="50" Text="{Binding Festival.Street, Mode=TwoWay}"></TextBox>
                <TextBlock Text="Huisnummer:"></TextBlock>
                <TextBox MaxLength="50" Text="{Binding Festival.HouseNumber, Mode=TwoWay}"></TextBox>
                <TextBlock Text="Land:"></TextBlock>
                <TextBox MaxLength="50" Text="{Binding Festival.Country, Mode=TwoWay}"></TextBox>
                <TextBlock Text="Begin datum:"></TextBlock>
                <TextBox MaxLength="50" Text="{Binding Festival.StartDate, Mode=TwoWay}"></TextBox>
                <TextBlock Text="Eind datum:"></TextBlock>
                <TextBox MaxLength="50" Text="{Binding Festival.EndDate, Mode=TwoWay}"></TextBox>
                <TextBlock Text="Klant id:"></TextBlock>
                <TextBox MaxLength="50" Text="{Binding Festival.ClientId}" IsReadOnly="True"></TextBox>
                <TextBlock Text="Gemeente id:"></TextBlock>
                <TextBox MaxLength="50" Text="{Binding Festival.MunicipalityId, Mode=TwoWay}"></TextBox>
                <TextBlock Text="Breedtegraad:"></TextBlock>
                <TextBox MaxLength="50" Text="{Binding Festival.Latitude, Mode=TwoWay}"></TextBox>
                <TextBlock Text="Hoogtegraad:"></TextBlock>
                <TextBox MaxLength="50" Text="{Binding Festival.Longitude, Mode=TwoWay}"></TextBox>

                <StackPanel
                        Orientation="Horizontal">
                    <TextBlock
                        Text="{Binding Date, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"
                        VerticalAlignment="Center"
                        FontSize="24" />
                    <Button
                        Margin="8 0 0 0"
                        Content="..."
                        Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                        materialDesign:DialogHost.DialogOpenedAttached="CombinedDialogOpenedEventHandler"
                        materialDesign:DialogHost.DialogClosingAttached="CombinedDialogClosingEventHandler">        
                        <Button.CommandParameter>
                            <Grid
                                Margin="-1">
                                <Grid.RowDefinitions>
                                    <RowDefinition
                                        Height="*" />
                                    <RowDefinition
                                    Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackPanel
                                  Grid.Row="0"
                                  Orientation="Horizontal">
                                    <Calendar
                                    x:Name="CombinedCalendar"
                                    Margin="-1 -4 -1 0" />
                                    <materialDesign:Clock
                                    x:Name="CombinedClock"
                                    DisplayAutomation="CycleWithSeconds"
                                    Is24Hours="True" />
                                </StackPanel>
                                <StackPanel
                                  Grid.Row="1"
                                  Margin="8"
                                  HorizontalAlignment="Right"
                                  Orientation="Horizontal">
                                    <Button
                                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                    CommandParameter="0"
                                    Style="{DynamicResource MaterialDesignFlatButton}">
                                        CANCEL
                                    </Button>
                                    <Button
                                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                    CommandParameter="1"
                                    Style="{DynamicResource MaterialDesignFlatButton}">
                                        OK
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Button.CommandParameter>
                    </Button>
                </StackPanel>

                <Border Padding="10">
                    <Button HorizontalAlignment="Right" Command="{Binding AddFestivalCommand}" CommandParameter="{Binding AddFestivalCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="100"
                    ToolTip="Festival opslaan">
                        Save
                    </Button>
                </Border>

            </StackPanel>
        </Border>
    </Grid>
</Page>
