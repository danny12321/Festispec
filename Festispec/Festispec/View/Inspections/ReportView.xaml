<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Festispec.View.Inspections"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:PdfViewer="clr-namespace:Syncfusion.Windows.PdfViewer;assembly=Syncfusion.PdfViewer.WPF" x:Class="Festispec.View.Inspections.ReportView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Inspections"
      DataContext="{Binding ReportVM, Source={StaticResource Locator}}">

    <StackPanel>

        <PdfViewer:PdfDocumentView ItemSource="{Binding FilePathTemp}" Height="719" Margin="0,0,469,0"/>
        <Border Padding="10">
            <Button HorizontalAlignment="Right" Command="{Binding ToPDF}" CommandParameter="{Binding EditInspectorCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="264"
                    ToolTip="Download PDF naar bureaublad">
                Opslaan
            </Button>
        </Border>

    </StackPanel>
</Page>
